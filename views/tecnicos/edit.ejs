<% include ../partials/header %>

<!-- Editar Perfil do TÃ©cnico -->

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= Tecnico.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/tecnicos/<%= Tecnico._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="Tecnico[nome]" value="<%= Tecnico.nome %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="Tecnico[email]" value="<%= Tecnico.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="textArea" name="Tecnico[morada]"
                        value="<%= Tecnico.morada %>">
                </div>
                <% if(currentUser && currentUser.isAdmin){ %>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Tecnico[salario]" value="<%= Tecnico.salario %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Tecnico[nome]" value="<%= Tecnico.funcao %>">
                    </div>
                <% }%>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Guardar</button>
                </div>
            </form>
            <a href="/Tecnicos">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>