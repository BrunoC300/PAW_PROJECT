% include ../partials/header %>

<!-- Editar Perfil do User -->

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= User.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/tecnicos/<%= Tecnico._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="User[nome]" value="<%= User.nome %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="User[email]" value="<%= User.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="textArea" name="User[morada]"
                        value="<%= User.morada %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Guardar</button>
                </div>
            </form>
            <a href="/Tecnicos">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>